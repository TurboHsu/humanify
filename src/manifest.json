{
	"{{chrome}}.manifest_version": 3,
	"{{firefox}}.manifest_version": 2,
	"icons": {
		"16": "icon/16.png",
		"32": "icon/32.png",
		"48": "icon/48.png",
		"96": "icon/96.png",
		"128": "icon/128.png"
	},
	"{{chrome}}.action": {
		"default_popup": "src/popup.html"
	},
	"{{chrome}}.host_permissions": ["<all_urls>", "*://*/*"],
	"{{chrome}}.permissions": [
		"activeTab",
		"contextMenus",
		"scripting",
		"storage"
	],
	"{{chrome}}.options_page": "src/options.html",
	"{{firefox}}.options_ui": {
		"page": "src/options.html",
		"open_in_tab": true
	},
	"{{firefox}}.browser_action": {
		"default_popup": "src/popup.html"
	},
	"{{firefox}}.browser_specific_settings": {
		"gecko": {
			"id": "humanify.addon.browser@0v0.rs",
			"strict_min_version": "102.0"
		}
	},
	"{{firefox}}.permissions": [
		"tabs",
		"storage",
		"scripting",
		"http://*/*",
		"https://*/*"
	],
	"{{chrome}}.content_security_policy": {
		"extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
	},
	"background": {
		"{{chrome}}.service_worker": "src/background.ts",
		"{{firefox}}.scripts": ["src/background.ts"],
		"{{firefox}}.persistent": true
	},
	"{{chrome}}.web_accessible_resources": [
		{
			"resources": ["static/html2canvas/html2canvas.esm.js"],
			"matches": ["<all_urls>"]
		}
	],
	"{{firefox}}.web_accessible_resources": [
		"static/html2canvas/html2canvas.esm.js"
	]
}
